{{#if this.showTopics}}
<input id="serachId">
<span class="applyButton" onclick={{action "apply"}}>
    {{#if this.getTopics.isIdle}}
        Ask
    {{else}}
        Thinking.....
        <span class="loading-dot-circle"></span>
    {{/if}}
</span>
{{#if this.selected.isIdle}}
    {{#each this.data.Topics as |data|}}
        <div class="recomendOption" onclick={{action "selectOption" data}}>
                {{data}}
        </div>
    {{/each}}
{{else}}
<div class="loading-dot-circle"></div>
{{/if}}
{{/if}}
{{#if this.gameData}}
    <QuizComp @questionData={{this.gameData}}/>
{{/if}}
{{yield}}